{
    "name": "keep-header",
    "description": "Execute a unix command in a header aware fashion.",
    "homepage": "https://github.com/eBay/tsv-utils-dlang",
    "authors": ["Jon Degenhardt"],
    "copyright": "Copyright (c) 2017-2018, eBay Software Foundation",
    "license": "BSL-1.0",
    "targetType": "executable",
    "configurations": [
        {
            "name" : "executable",
            "targetName": "keep-header",
            "targetPath": "../bin/",
            "mainSourceFile": "src/keep-header.d",
            "dependencies": {
                "tsv-utils-dlang:common": "*"
            }
        },
        {
            "name": "unittest",
            "targetType": "none"
        }
    ],
    "buildTypes": {
        "debug": { "buildOptions": ["debugMode", "optimize"] },
        "release": { "buildOptions": ["releaseMode", "optimize", "inline"],
                     "dflags": ["-boundscheck=off"],
                     "dflags-osx-ldc": ["-flto=thin"] }
    }
}
