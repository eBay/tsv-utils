{
    "name": "csv2tsv",
    "description": "Convert comma-separated values data to tab-separated values format (CSV to TSV).",
    "homepage": "https://github.com/eBay/tsv-utils",
    "authors": ["Jon Degenhardt"],
    "copyright": "Copyright (c) 2015-2018, eBay Software Foundation",
    "license": "BSL-1.0",
    "targetType": "executable",
    "configurations": [
        {
            "name" : "executable",
            "targetName": "csv2tsv",
            "targetPath": "../bin/",
            "mainSourceFile": "src/tsv_utils/csv2tsv.d",
            "dependencies": {
                "tsv-utils:common": { "path": ".." }
            }

        },
        {
            "name" : "unittest",
            "targetType" : "none"
        }
    ],
    "buildTypes": {
        "debug": { "buildOptions": ["debugMode", "optimize"] },
        "release": { "buildOptions": ["releaseMode", "optimize", "inline"],
                     "dflags": ["-boundscheck=off"],
                     "dflags-osx-ldc": ["-flto=thin"] },
        "unittest" : { "buildOptions": ["unittests"] }
    }
}
